#!/bin/sh

# Packages
sudo apt install -y zsh nodejs curl fzf git aptitude 
{{- if .zshrc.tmux }} tmux {{- end }}

# Zoxide
{{ if .zshrc.zoxide -}} 
if ! command -v zoxide 2>&1 >/dev/null
then
curl -sS https://raw.githubusercontent.com/ajeetdsouza/zoxide/main/install.sh | bash
fi
{{- end }}

# OMZSH
if ! command -v omz 2>&1 >/dev/null
then
sh -c "$(curl -fsSL https://raw.githubusercontent.com/ohmyzsh/ohmyzsh/master/tools/install.sh)"
git clone https://github.com/zsh-users/zsh-autosuggestions ${ZSH_CUSTOM:-~/.oh-my-zsh/custom}/plugins/zsh-autosuggestions
git clone https://github.com/zsh-users/zsh-syntax-highlighting.git ${ZSH_CUSTOM:-~/.oh-my-zsh/custom}/plugins/zsh-syntax-highlighting
fi

# Nvim
if ! command -v nvim 2>&1 >/dev/null
then
curl -LO https://github.com/neovim/neovim/releases/latest/download/nvim-linux64.tar.gz
sudo rm -rf /opt/nvim
sudo tar -C /opt -xzf nvim-linux64.tar.gz
rm nvim-linux64.tar.gz
sudo update-alternatives --install /usr/bin/editor editor /opt/nvim-linux64/bin/nvim 50
fi